
<div class="boxes boxes-solo">
  <h1 class="title"><%= @cocktail.name%></h1>

  <div class="box">

    <%= cocktail_image_path(@cocktail, class: 'img') %>
    <div class="details">
      <h3>Ingredients:</h3>
          <% @cocktail.doses.each do |d|%>
            <div class="dose">
              <div>
                  <p><span class="strong">Ingredient: </span><%= d.ingredient.name %></p>
                  <p><span class="strong">Dose: </span><%= d.description %></p>
              </div>
              <div>
                <%= link_to '- Delete', cocktail_dose_path(cocktail_id: @cocktail, id: d), method: :delete,  class: 'btn-outline', data: { confirm: 'are yousure?' } %>
              </div>
            </div>
          <%end%> 
      <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn-outline' %>
    </div>
  </div>
</div>


<%#= render "doses/new" %>
